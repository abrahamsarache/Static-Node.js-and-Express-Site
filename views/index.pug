extends layout.pug

block content

  article.portfolio-intro

    h1 My Portfolio
 
    p Take a look at my journey through web development

  article.portfolio-project-thumbs
    .projects-box.box.grid

      each project in myProjects
          .cell
            a(href='project/' + project.id)
              img.thumbnail(src=project.image_urls[0], alt='Thumbnail of ' + project.project_name)
              h5 #{project.project_name}